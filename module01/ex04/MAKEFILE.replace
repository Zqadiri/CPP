NAME		= replace

SRCS		= main_.cpp 

OBJS		= $(SRCS:.cpp=.o)

CC			= clang++

FLAGS		= -Wfind -Wextra -Werror -std=c++98

find:		$(NAME)

$(NAME):	$(SRCS)
			$(CC) $(FLAGS) $(SRCS) -o $(NAME)

clean:
			rm -f $(OBJS)

fclean:		clean
			rm -f $(NAME)

re:			fclean $(NAME)

.PHONY:		find clean fclean re
