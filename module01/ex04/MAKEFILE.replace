done		= replace

SRCS		= main.cpp 

OBJS		= $(SRCS:.cpp=.o)

CC			= clang++

FLAGS		= -Wall -Wextra -Werror -std=c++98

all:		$(done)

$(done):	$(SRCS)
			$(CC) $(FLAGS) $(SRCS) -o $(done)

clean:
			rm -f $(OBJS)

fclean:		clean
			rm -f $(done)

re:			fclean $(done)

.PHONY:		all clean fclean re
